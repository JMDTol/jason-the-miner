{
  "bulk": {
    "csv-file": {
      "path": "demos/data/in/github-search-queries.csv",
      "csv": {
        "columns": true,
        "delimiter": ","
      }
    },
    "concurrency": 2
  },
  "load": {
    "http": {
      "baseURL": "https://github.com",
      "url": "/search?l={language}&o=desc&q={query}&s=stars&type=Repositories"
    }
  },
  "parse": {
    "html": {
      "repos": [{
        "_$": ".repo-list .repo-list-item",
        "language": "div:nth-child(2) | trim",
        "name": "h3 > a",
        "description": "div:first-child > p | trim",
        "stats": {
          "stars": ".col-2.text-right > a |Â trim",
          "last-update": "relative-time < attr(datetime)"
        }
      }]
    }
  },
  "transform": {
    "csv-file": {
      "path": "demos/data/out/github-search-bulk.csv",
      "append": true,
      "csv": {
        "header": true,
        "delimiter": ";"
      }
    }
  }
}
